<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:background="@drawable/button"
                android:id="@+id/openapp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:text="   Open App"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:background="@drawable/button"
                android:id="@+id/flashlight"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:text="   Toggle Flashlight"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:background="@drawable/button"
                android:id="@+id/killforeground"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:text="   Kill Foreground App (Root)"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:background="@drawable/button"
                android:id="@+id/quicksettings"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:text="   Expand QuickSettings (Root)"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:background="@drawable/button"
                android:id="@+id/notifications"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:text="   Expand Notifications (Root)"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:background="@drawable/button"
                android:id="@+id/sleep"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:text="   Sleep (Root)"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:background="@drawable/button"
                android:id="@+id/rotation"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:text="   Toggle Rotation (Root)"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:background="@drawable/button"
                android:id="@+id/recentapps"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:text="   Recent Apps (Root)"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:background="@drawable/button"
                android:id="@+id/menu"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:text="   Menu (Root)"
                    android:textSize="20sp" />

            </LinearLayout>

            <LinearLayout
                android:background="@drawable/button"
                android:id="@+id/home"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:text="   Home (Root)"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:background="@drawable/button"
                android:id="@+id/back"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:text="   Back (Root)"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:background="@drawable/button"
                android:id="@+id/customcommand"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:text="   Custom Command"
                    android:textSize="20sp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>