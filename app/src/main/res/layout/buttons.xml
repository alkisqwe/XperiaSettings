<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:paddingLeft="15dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:showDividers="middle"
            android:divider="?android:dividerVertical"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/swapswitchlayout"
                android:background="@drawable/button"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="bottom"
                        android:text="Swap Navigation Buttons (LSPosed)"
                        android:textColor="#FFFFFF"
                        android:textSize="20sp" />

                    <TextView
                        android:textSize="14sp"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="top"
                        android:text="Swap Navigation Buttons Recent And Back\nRequires LSPosed"
                        android:textColor="#FFFFFF" />

                </LinearLayout>

                <Switch
                    android:id="@+id/swapswitch"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:gravity="center_vertical"/>

            </LinearLayout>

            <LinearLayout
                android:background="@drawable/button"
                android:orientation="vertical"
                android:id="@+id/assistswitchhome"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:gravity="center_vertical">

                <TextView
                    android:textSize="20sp"
                    android:textColor="#FFFFFF"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Voice Assist Home Button"/>

                <TextView
                    android:id="@+id/assistswitchhometext"
                    android:textSize="14sp"
                    android:textColor="#FFFFFF"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="None"/>

            </LinearLayout>

            <LinearLayout
                android:background="@drawable/button"
                android:orientation="vertical"
                android:id="@+id/assistswitchpower"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:gravity="center_vertical">

                <TextView
                    android:textSize="20sp"
                    android:textColor="#FFFFFF"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Voice Assist Power Button"/>

                <TextView
                    android:id="@+id/assistswitchpowertext"
                    android:textSize="14sp"
                    android:textColor="#FFFFFF"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="None"/>

            </LinearLayout>

            <LinearLayout
                android:background="@drawable/button"
                android:orientation="vertical"
                android:id="@+id/assistswitchany"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:gravity="center_vertical">

                <TextView
                    android:textSize="20sp"
                    android:textColor="#FFFFFF"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Voice Assist Any Other Way"/>

                <TextView
                    android:id="@+id/assistswitchanytext"
                    android:textSize="14sp"
                    android:textColor="#FFFFFF"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="None"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>